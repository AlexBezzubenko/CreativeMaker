@model Course.Models.RegisterViewModel
@{
    ViewBag.Title = Resources.Resource.Registration;
}

<link href="~/Content/Site/Register.css" rel="stylesheet" type="text/css" />

<div id="register_page">
    <div id="registerForm">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="formPart">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="formPart">
                    @Html.LabelFor(m => m.Password, Resources.Resource.Password,
                                    new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="formPart">
                    @Html.LabelFor(m => m.ConfirmPassword, Resources.Resource.ConfirmPassword,
                                     new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                    <input type="submit" class="btn btn-github" value="@Resources.Resource.Register" />
            </div>
        }
    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
