@using Course.Models;
@model IEnumerable<CreativeResult>

@{
    ViewBag.Title = Resources.Resource.SearchResults;
}

<link rel="stylesheet" type="text/css" href="~/Content/Site/Search.css" />

<input id="query" type="hidden" value="@ViewBag.query"/>
 
<div id="searchResult" class="col-md-12">
    <h2>@(Resources.Resource.SearchResults):</h2>
    <table id="results" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Resources.Resource.CreativeName</th>
                <th>@Resources.Resource.HeaderName</th>
                <th>@Resources.Resource.Author</th>
                <th>@Resources.Resource.Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr class="success">
                    <td>
                        @Html.ActionLink(result.CreativeName, "View", "Home",
                                     new { id = result.CreativeId },
                                     new { @class = "shortLabel", title=result.CreativeName })
                    </td>
                    <td>
                        @Html.ActionLink(result.HeaderName, "View", "Home",
                                     new { id = result.CreativeId, selectedHeaderId = result.HeaderId },
                                     new { @class = "shortLabel", title = result.HeaderName })
                    </td>
                    <td>
                        @Html.DisplayFor(i => result.UserName)
                    </td>
                    <input class="itemRate" type="hidden" value="@result.Rating" />
                    <td>
                        <div class="rateYo"></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="loading">
    <img src='@Url.Content("~/Content/Images/loading_spinner.gif")'>
</div>

@section Scripts {
    <script src="~/Scripts/Site/RateYoInTable.js" type="text/javascript"></script>
    <script src="~/Scripts/Site/Search.js" type="text/javascript"></script>
}






 



