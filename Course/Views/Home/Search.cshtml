@using Course.Models;
@model IEnumerable<CreativeResult>

@{
    ViewBag.Title = Resources.Resource.SearchResults;
}

<div id="searchResult" class="col-md-12">
    <h2>@(Resources.Resource.SearchResults):</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Resources.Resource.CreativeName</th>
                <th>@Resources.Resource.HeaderName</th>
                <th>@Resources.Resource.Author</th>
                <th>@Resources.Resource.Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr class="success">
                    <td>
                        @Html.ActionLink(result.CreativeName, "View", "User",
                                     new { id = result.CreativeId }, null)
                    </td>
                    <td>
                        @Html.ActionLink(result.HeaderName, "View", "User",
                                     new { id = result.CreativeId, selectedHeaderId = result.HeaderId }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(i => result.UserName)
                    </td>
                    <input class="itemRate" type="hidden" value="@result.Rating" />
                    <td>
                        <div class="rateYo"></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Scripts/Site/RateYoInTable.js" type="text/javascript"></script>
}






 



