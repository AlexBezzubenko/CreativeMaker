@model Course.Models.Creative

@{
    <link rel="stylesheet" type="text/css" href="~/Content/edit.css" />
    <link href="~/Content/jquery.tagit.css" rel="stylesheet" type="text/css">
    <link href="~/Content/tagit.ui-zendesk.css" rel="stylesheet" type="text/css">
    <link href="~/Content/simplemde.min.css" rel="stylesheet" type="text/css">
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Views)
        @Html.HiddenFor(model => model.Rating)
        @Html.HiddenFor(model => model.RatingsAmount)
        @Html.HiddenFor(model => model.CreationTime)
        @Html.HiddenFor(model => model.LastEditTime)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}




<button class="btn btn-primary" id="add_header" type="button" style="width:190px;">
    Add
</button>
<div id="headers_with_content" class="row">
    <div id="headers" class="col-md-3">
        <ul id="headers_list" class="list-group">
            @foreach (var header in Model.Headers)
            {
                <li class="header list-group-item" value="@header.Id">
                    @Model.Headers.IndexOf(header) @header.Name @header.Id
                </li>
            }
        </ul>
    </div>
    
    @if (Model.Headers.Count > 0)
    {
        <div id="header_content" class="col-md-9">
            <h3>@Model.Headers[0].Name</h3>
            <ul id="myTags">
                @foreach (var tag in Model.Headers[0].Tags)
                {
                    <li>@tag.Name</li>
                }
            </ul>
            <textarea id="header_text" class="header_text">@Model.Headers[0].Text</textarea>
        </div>
    }
    else
    {
        <div id="header_content" class="col-md-9"/>
    }
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Scripts/tag-it.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/simplemde.min.js" type="text/javascript" charset="utf-8"></script>
    <script>
        $(document).ready(function () {
            var simplemde = new SimpleMDE({
                element: document.getElementById("header_text"),
                spellChecker: false,
            });
            simplemde.codemirror.on("change", function () {
                //console.log(simplemde.value());
            });

            simplemde.codemirror.on("dragstart", function (editor, e) { console.log('dragstart') });
            simplemde.codemirror.on("dragenter", function (editor, e) { console.log('dragenter') });
            simplemde.codemirror.on("dragover", function (editor, e) { console.log('dragover') });
            simplemde.codemirror.on("drop", function (editor, e) { console.log('drop') });

            var myArray = [];

             @foreach (var tag in ViewBag.Tags)
            {
                @:myArray.push("@tag");
            }
            $('#myTags').tagit({
                availableTags: myArray
            });
            $("#headers_list").sortable({
                axis:'y'
            });
            $('.header').click(function () {
                var index = $(this).val();
                $.ajax({
                    async: false,
                    data: { id: index },
                    url: '/User/SetHeaderContext'
                }).success(function (header) {
                    //$('#header_content').replaceWith(partialView);
                    var headerJson = JSON.parse(header);
                    console.log(headerJson);
                    simplemde.value(headerJson.Text);
                    $('#header_content h3').html(headerJson.Name);

                    $("#myTags").tagit("removeAll");
                    headerJson.Tags.forEach(function (item, i, arr) {
                        $("#myTags").tagit("createTag", item.Name);
                    });
                });
            });
            
        });
    </script>

     
}
